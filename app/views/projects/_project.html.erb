<div class="panel panel-default" id="project_<%= project.id %>">
  <div class="panel-heading" style="height: 51px;">
    <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#all_projects" href="#collapse-project<%= project.id %>" id="project-name-display-<%= project.id %>">
        <%= project.name %>
      </a>
      <%= form_for project, :html => { :style => 'float: right;' }, remote: true do |f| %>
        <span id="project_name_update_<%= project.id %>" style="display: none;">
          <%= f.text_field :name %>
          <%= f.submit "Update", class: "btn btn-primary a-btn-slide-text" %>
        </span>
        <a data-projectId="<%= project.id %>" class="btn btn-primary a-btn-slide-text project-edit" id="project-edit-button-<%= project.id %>">
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <span><strong>Edit</strong></span>
        </a>
        <%= link_to project, method: :delete, class: "btn btn-primary a-btn-slide-text", data: {confirm: "Are you sure?"}, remote: true do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <span><strong>Delete</strong></span>  
        <% end %>
      <% end %>
    </h4>
  </div>
  <div id="collapse-project<%= project.id %>" class="panel-collapse collapse">
    <div class="panel-body">
      <%= render 'tasks/form', :project => project %>
      <%= render 'tasks/index', :project => project %>
    </div>
  </div>
</div>